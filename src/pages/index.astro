  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>

  <Hero>
    <Fragment slot="title">
        Virtual & Augmented Reality Vestibular Rehabilitation at Home
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">VestiBlue</span> enables rehabilitation exercise at home, using the Meta Quest 3 headset.
        </span>
    </Fragment>

    <Fragment slot="subtitle">
        <span class="hidden sm:inline">
